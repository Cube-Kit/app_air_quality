{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "typedocOptions": {
        "entryPoints": ["src"],
        "entryPointStrategy": "expand",
        "out": "docs"
    }
}
